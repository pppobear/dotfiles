#!/usr/bin/env zsh
# User-specific configuration
# This file is for your personal customizations

# Startup commands (interactive shells only)
if [[ $- == *i* ]]; then
  # Display a random pokemon on startup
  if command -v pokego >/dev/null 2>&1; then
    pokego --no-title -r 1,3,6
  elif command -v pokemon-colorscripts >/dev/null 2>&1; then
    pokemon-colorscripts --no-title -r 1,3,6
  elif command -v fastfetch >/dev/null 2>&1; then
    fastfetch --logo-type kitty
  fi
fi

# Add your custom configurations below
# Examples:
# - Custom environment variables
# - Personal aliases
# - Project-specific settings
# - Tool configurations

# Custom scripts path
[ -d "$HOME/scripts" ] && export PATH="$HOME/scripts:$PATH"

# YesCode Token
export YESCODE_API_KEY=
{{- $found := false -}}
{{ range (rbw "co.yes.vg").fields }}
  {{- if and (not $found) (eq .name "api_key") -}}
    {{- $found = true -}}
    {{ .value }}
  {{- end -}}
{{ end }}
export ANTHROPIC_AUTH_TOKEN=$YESCODE_API_KEY

alias claude="/Users/suyihang/.claude/local/claude"
export GOOGLE_CLOUD_PROJECT="gen-lang-client-0866326289"

